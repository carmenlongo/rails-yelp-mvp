<p id="notice"><%= notice %></p>
<h1> Show a restaurant </h1>
<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @restaurant.address %>
</p>

<p>
  <strong>Phone Number:</strong>
  <%= @restaurant.phone_number %>
</p>

<p>
  <strong>Category:</strong>
  <%= @restaurant.category %>
</p>
<h3>Reviews</h3>
<ul>
  <% @restaurant.reviews.each do |review| %>
    <li>
      <strong>Rating:<%= review.rating %></strong>
      <%= review.content %>
    </li>
  <% end %>
</ul>
<%= link_to 'Add a review', new_restaurant_review_path(@restaurant), class: 'btn btn-primary' %>
<%= link_to 'Edit restaurant info', edit_restaurant_path(@restaurant) %> |
<%= link_to 'Back to all restaurants', restaurants_path %>
